<!-- 			**/*.zip, **/*.jar,**/*.class, **/*.js, **/*.ts</sonar.exclusions> -->

		<!-- JACOCO/SONAR SECTION -->
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.jacoco.reportPaths>${project.build.directory}/jacoco.exec</sonar.jacoco.reportPaths>
		<sonar.language>java</sonar.language>
		<sonar.junit.reportsPaths>${project.build.directory}jacoco.exec</sonar.junit.reportsPaths>
	</properties>

	<profiles>
		<profile>
			<id>test</id>
			<activation>
				<jdk>${java.version}</jdk>
			</activation>
			<properties>
				<env>test</env>
				<sonar.host.url>http://sonar02:9990</sonar.host.url>
